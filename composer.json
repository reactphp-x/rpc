{
    "name": "reactphp-x/rpc",
    "description": "A ReactPHP-based RPC library",
    "type": "library",
    "keywords": [
        "reactphp",
        "rpc",
        "async",
        "non-blocking"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "wpjscc",
            "email": "wpjscc@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "clue/ndjson-react": "^1.3",
        "hcs-llc/php-json-rpc": "^7.0",
        "react/async": "^4.3",
        "react/child-process": "^0.6.6",
        "react/http": "^1.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "ReactphpX\\Rpc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReactphpX\\Rpc\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "vendor/bin/phpunit",
        "test:unit:verbose": "vendor/bin/phpunit --testdox"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
